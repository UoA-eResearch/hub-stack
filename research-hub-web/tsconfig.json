{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "downlevelIteration": true,
    "importHelpers": true,
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "types": ["jasmine"],
    "lib": [
      "es2018",
      "dom",
      "esnext.asynciterable"
    ],
    "paths": {
      "@services/*": [
        "app/services/*"
      ],
      "@pipes/*": [
        "app/pipes/*"
      ],
      "@app/*": [
        "app/*"
      ],
      "@model/*": [
        "app/model/*"
      ],
      "@environments/*": [
        "environments/*"
      ],
      "@graphql/*": [
        "app/graphql/*"
      ],
      "@components/*": [
        "app/components/*"
      ],
      "@directives/*": [
        "app/directives/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "crypto": [
        "../node_modules/crypto-js"
      ]
    },
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
