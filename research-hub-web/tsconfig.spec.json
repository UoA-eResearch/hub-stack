{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc/spec",
    "baseUrl": "./",
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "@services/*": [
        "src/app/services/*"
      ],
      "@pipes/*": [
        "src/app/pipes/*"
      ],
      "@app/*": [
        "src/app/*"
      ],
    },
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}